{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": ["master", "hotfix/*"],
      "message": "chore(release): 'publish %s'"
    }
  },
  "changelog": {
    "repo": "fidisys/react-native-components",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "internal": ":house: Internal"
    },
    "cacheDir": ".changelog",
    "ignoreCommitters": ["allcontributors"]
  }
}
